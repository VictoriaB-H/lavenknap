---
const { variant = "primary", size = "medium" } = Astro.props;
const buttonStyling =
  "bg-white-500 text-rose-600 p-3 rounded-sm m-10 hover:bg-rose-500 border-1 border-rose-600";
const variantClasses = {
  primary: "bg-white-500 text-black hover:bg-black hover:text-white",
  secondary: "bg-rose-600 text-white hover:bg-white hover:text-rose-600",
};
const sizeClasses = {
  large: "text-2xl",
  medium: "text-lg",
  small: "text-sm",
};
---

<div>
  <button
    class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
    ><slot /></button
  >
</div>
